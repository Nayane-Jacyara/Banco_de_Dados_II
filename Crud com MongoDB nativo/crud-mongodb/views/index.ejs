<!DOCTYPE html>
<html>
  <head>
    <style>
      /* Estilos personalizados */
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 20px;
      }

      h1, h2 {
        color: #1877f2;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        border: 1px solid #dddfe2;
        margin-bottom: 20px;
      }

      th, td {
        padding: 10px;
        border-bottom: 1px solid #dddfe2;
        text-align: left;
      }

      th {
        background-color: #f0f2f5;
      }

      form {
        background-color: #fff;
        border: 1px solid #dddfe2;
        padding: 10px;
        margin-bottom: 10px;
      }

      label {
        display: block;
        margin-bottom: 5px;
      }

      input[type="text"],
      input[type="number"] {
        width: 200px;
        padding: 5px;
        border: 1px solid #dddfe2;
        border-radius: 3px;
      }

      input[type="submit"] {
        background-color: #1877f2;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 3px;
        cursor: pointer;
      }

      input[type="submit"]:hover {
        background-color: #1559b4;
      }
    </style>
  </head>
  <body>
    <h2>Lista de Cadastros</h2>
    <table>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Idade</th>
      </tr>
      <% for(let i=0; i < result.length; i++) {%>
        <tr>
          <td><%= result[i]._id %></td>
          <td><%= result[i].name %></td>
          <td><%= result[i].age %></td>
        </tr>
      <% } %>
    </table>
    <h2>Cadastro</h2>
    <form action="save" method="POST">
      <p>
        <label>Name:</label>
        <input type="text" name="name" />
      </p>
      <p>
        <label>Idade:</label>
        <input type="number" name="age" />
      </p>
      <p>
        <input type="submit" value="Salvar"/>
      </p>
    </form>
    <h2>Exclus√£o</h2>
    <form action="/delete" method="POST">
      <p>
        <label>ID:</label>
        <input type="text" name="id" />
      </p>
      <p>
        <input type="submit" value="Excluir"/>
      </p>
    </form>
    <h2>Atualizar</h2>
    <form action="/edit" method="POST">
      <p>
        <label>ID:</label>
        <input type="text" name="id" />
      </p>
      <p>
        <label>Name:</label>
        <input type="text" name="name" />
      </p>
      <p>
        <label>Idade:</label>
        <input type="number" name="age" />
      </p>
      <p>
        <input type="submit" value="Editar"/>
      </p>
    </form>
  </body>
</html>
